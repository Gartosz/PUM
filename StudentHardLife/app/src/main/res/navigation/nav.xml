<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav"
    app:startDestination="@id/tasksLists">

    <fragment
        android:id="@+id/tasksLists"
        android:name="com.example.studenthardlife.fragments.TasksLists"
        android:label="TasksLists" >
        <action
            android:id="@+id/action_tasksLists_to_listView"
            app:destination="@id/listView" />
    </fragment>
    <fragment
        android:id="@+id/listView"
        android:name="com.example.studenthardlife.fragments.ListView"
        android:label="ListView" >
        <action
            android:id="@+id/action_listView_to_tasksLists"
            app:destination="@id/tasksLists" />
        <argument
            android:name="index"
            app:argType="integer" />
    </fragment>
</navigation>